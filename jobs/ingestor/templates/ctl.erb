#!/bin/bash

set -e

RUN_DIR=/var/vcap/sys/run/ingestor
LOG_DIR=/var/vcap/sys/log/ingestor
PIDFILE=${RUN_DIR}/ingestor.pid

source /var/vcap/packages/pid_utils_revok/pid_utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "ingestor"

    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    mkdir -p $LOG_DIR
    chown -R vcap:vcap $LOG_DIR

    echo $$ > $PIDFILE

    exec chpst -u vcap:vcap /var/vcap/packages/cred-alert/bin/revok-ingestor \
      --port <%= p("webhook.port") %>                                        \
      <% p("webhook.github_secret_keys").each do |secret| %>                 \
      --github-webhook-secret-token <%= secret %>                            \
      <% end %>                                                              \
      --pubsub-project-name <%= p("pubsub.project_name") %>                  \
      --pubsub-topic <%= p("pubsub.topic") %>                                \
      <% if_p("metrics.datadog_api_key") do |api_key| %>                     \
      --datadog-api-key <%= api_key %>                                       \
      <% end %>                                                              \
      <% if_p("metrics.sentry_dsn") do |dsn| %>                              \
      --sentry-dsn <%= dsn %>                                                \
      <% end %>                                                              \
      <% if_p("metrics.environment") do |env| %>                             \
      --environment <%= env %>                                               \
      <% end %>                                                              \
      1>>$LOG_DIRgingestor.stdout.log                                        \
      2>>$LOG_DIR/ingestor.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}"

    ;;

esac
