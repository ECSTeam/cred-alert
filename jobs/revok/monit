check process revok
  with pidfile /var/vcap/sys/run/bpm/revok/revok.pid
  start program "/var/vcap/packages/bpm/bin/bpm start revok"
  stop program "/var/vcap/packages/bpm/bin/bpm stop revok"
  group vcap

check process revok-api
  with pidfile /var/vcap/sys/run/bpm/revok/revok-api.pid
  start program "/var/vcap/packages/bpm/bin/bpm start revok-api"
  stop program "/var/vcap/packages/bpm/bin/bpm stop revok-api"
  group vcap
