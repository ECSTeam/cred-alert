---
processes:
  - name: revok
    executable: /var/vcap/packages/cred-alert/bin/revok-worker
    args:
      - --config-file=/var/vcap/jobs/revok/config/config.yml
    limits:
      open_files: 65536
    persistent_disk: true
    additional_volumes:
      - path: <%= p("revok.work_dir") %>
        writable: true
