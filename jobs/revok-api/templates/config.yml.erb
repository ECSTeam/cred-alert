---
metrics:
<% if_p("revok-api.metrics.sentry_dsn") do |sentry_dsn| %>
  sentry_dsn: <%= sentry_dsn %>
<% end %>
<% if_p("revok-api.metrics.environment") do |environment| %>
  environment: <%= environment %>
<% end %>

mysql:
  username: <%= p("revok-api.mysql.username") %>
  password: <%= p("revok-api.mysql.password") %>
  hostname: <%= p("revok-api.mysql.hostname") %>
  port: <%= p("revok-api.mysql.port") %>
  db_name: <%= p("revok-api.mysql.db") %>
  server_name: <%= p("revok-api.mysql.server_name") %>
  ca_certificate_path: /var/vcap/jobs/revok-api/config/mysql_ca_certificate
  certificate_path: /var/vcap/jobs/revok-api/config/mysql_certificate
  private_key_path: /var/vcap/jobs/revok-api/config/mysql_private_key
<% if_p("revok-api.mysql.private_key_passphrase") do |passphrase| %>
  private_key_passphrase: <%= passphrase %>
<% end %>

identity:
  ca_certificate_path: /var/vcap/jobs/revok-api/config/ca_certificate
  certificate_path: /var/vcap/jobs/revok-api/config/certificate
  private_key_path: /var/vcap/jobs/revok-api/config/private_key
<% if_p("revok-api.identity.private_key_passphrase") do |passphrase| %>
  private_key_passphrase: <%= passphrase %>
<% end %>

rpc_server:
  bind_ip: <%= p("revok-api.rpc_server.bind_ip") %>
  bind_port: <%= p("revok-api.rpc_server.bind_port") %>
