#!/usr/bin/env bash

set -e

export GOPATH=$PWD/cred-alert
export PATH=$GOPATH/bin:$PATH

service mysql start

pushd ${GOPATH}
  # Initialize submodules so that we can use this task with a fresh clone
  git submodule update --init

  go install github.com/onsi/ginkgo/ginkgo

  ./scripts/test -race $@
popd
